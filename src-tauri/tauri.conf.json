{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "One More Bite",
  "version": "1.0.0",
  "identifier": "com.onemorbite.foodapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "One More Bite",
        "url": "index.html",
        "width": 800,
        "height": 600
      },
      {
        "label": "admin",
        "title": "One More Bite - Admin Dashboard",
        "url": "admin.html",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}